mixin add-svg(name_class, name_icon)
    svg(class='' + name_class)
        use(xlink:href='img/svg/symbol/svg/sprite.symbol.svg#' + name_icon)

mixin header-nav__wrapper(items)
    .header-nav__wrapper
        each item in items
            a(href='#').header-nav__item= item

mixin our-services-services(amount)
    .our-services-services
        .our-services-services__wrapper
            - for(var i = 1; i <= amount; i++)
                .our-services-service
                    .our-services-service__wrapper
                        +add-svg('our-services-service__img', 'icon-service')
                        .our-services-service__text
                            span.our-services-service__subject Создание сайтов
                            | Lorem Ipsum - это текст- "рыба", часто использует в печати и вэб-дизайне.

mixin about-us-projects(amount)
    .about-us-projects
        - for(var i = 1; i <= amount; i++)
            .about-us-project
                .about-us-project__wrapper
                    .about-us-project__number
                        +add-svg('about-us-project__icon', 'icon-web-programming')
                        .about-us-project__num 125
                    .about-us-project__subtitle Our projects

mixin all-services-services(amount)
    .all-services-services
        .all-services-services__wrapper
            - for(var i = 1; i <= amount; i++)
                .all-services-service
                    .all-services-service__wrapper
                        .all-services-service__img
                        .all-services-service__title
                            span.all-services-service__number 01 &#32;
                            | Исследование и упаковка
                        .all-services-service__text
                            | Lorem Ipsum - это текст-"рыба", часто используемый в печати и вэб-дизайне.
                            | Lorem Ipsum является стандартной "рыбой" для текстов на латинице с начала XVI века.
                        a(href='#').all-services-service__link Подробнее

mixin all-projects-projects(amount)
    .all-projects-projects
        .all-projects-projects__wrapper
            - for(var i = 1; i <= amount; i++)
                .all-projects-project
                    .all-projects-project__image

mixin footer-items-block-main-links(items)
    .footer-items-block-links__title.footer-items-block-main-links__title Основные ссылки
    each item in items
        a(href='#').footer-items-block-links__link.footer-items-block-main-links__link
            +add-svg('footer-items-block-links__image footer-items-block-main-links__image', 'icon-right-arrow')
            = item

